<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.srcandy.candyterminal.dao.UserDao">
    <resultMap id="BaseResultMap" type="top.srcandy.candyterminal.model.User">
        <id column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password_hash" property="password_hash" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="isTwoFactorAuth" property="isTwoFactorAuth" jdbcType="VARCHAR"/>
        <result column="twoFactorAuthSecret" property="twoFactorAuthSecret" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="selectByUserName" parameterType="String" resultType="top.srcandy.candyterminal.model.User">
        select *
        from User
        where username = #{username}
    </select>
    <select id="selectByUserPhone" parameterType="String" resultType="top.srcandy.candyterminal.model.User">
        select *
        from User
        where phone = #{phone}
    </select>
    <insert id="insert" parameterType="top.srcandy.candyterminal.bean.dto.LoginDTO">
        insert into User (username, password, salt)
        values (#{username}, #{password}, #{salt})
    </insert>
    <insert id="insertSelective" parameterType="top.srcandy.candyterminal.bean.dto.RegisterDTO">
        insert into User (username, password, salt, phone, twoFactorAuthSecret)
        values (#{username}, #{password}, #{salt}, #{phone},#{twoFactorSecret})
    </insert>
    <update id="update" parameterType="top.srcandy.candyterminal.request.UpdateProfileRequest">
        update User
        set username = #{username},
            password = #{password},
            password_hash = #{password_hash},
            salt     = #{salt},
            nickname = #{nickname},
            email    = #{email},
            phone    = #{phone},
            avatar   = #{avatar},
            isTwoFactorAuth = #{isTwoFactorAuth},
            twoFactorAuthSecret = #{twoFactorAuthSecret}
        where uid = #{uid}
    </update>
</mapper>